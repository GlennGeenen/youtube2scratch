<Window x:Class="youtube2scratch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="youtube2scratch" Height="370" Width="235" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Image x:Name="VideoImage" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Source="youtube.png"/>
        <TextBox x:Name="VideoLink" HorizontalAlignment="Left" Height="75" Margin="10,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button Content="Download" HorizontalAlignment="Left" Margin="10,295,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" Height="30"/>
        <ProgressBar x:Name="VideoProgress" HorizontalAlignment="Left" Height="14" Margin="10,276,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="VideoTitle" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="200" Height="26"/>

    </Grid>
</Window>
